{% extends 'base.html.twig' %}

{% block title %}DaySlot index{% endblock %}

{% block body %}
    <h1>DaySlot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>IsAvailable</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for day_slot in day_slots %}
            <tr>
                <td>{{ day_slot.id }}</td>
                <td>{{ day_slot.name }}</td>
                <td>{{ day_slot.isAvailable ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_day_slots_show', {'id': day_slot.id}) }}">show</a>
                    <a href="{{ path('app_day_slots_edit', {'id': day_slot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('day_slots.new') }}">Create new</a>
{% endblock %}
