{% extends 'base.html.twig' %}

{% block title %}Menu index
{% endblock %}

{% block body %}
	<sdiv class="container text-center mt-4">
    <h1 class="h5-page mt-4" style="color: #b5a10a;">Menu du marché</h1>
		<div class="menu-wrapper">
			{% for menu in menus %}
				<div class="mt-4" style="min-width: 350px;">
					<div class="card-body text-center">
							<h4 class="menu_block-title fs-3 h5-page text-capitalize" style="font-weight: semi-bold; rgb(35, 28, 28); " href="{{ path('menu.show', {id: menu.id}) }}">Formule
								{{ menu.title }}</h4>
						<p class="card-text mt-4 fs-5 menu_conditions" style="color: rgb(35, 28, 28); ;">(
							{{ menu.conditions }}
							)</p>
						<p class="card-text mb-4 mt-3 fs-4 me-2 text-light">{{ menu.description }}
							{{ menu.price }}€</p>
							</div>
							</div>
							<hr class="hr_menu">
								{% endfor %}
						<hr>
					
						
						</div>
							</sdiv>
				
				{% endblock %}
