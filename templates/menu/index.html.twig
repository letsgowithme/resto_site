{% extends 'base.html.twig' %}

{% block title %}Menu index
{% endblock %}

{% block body %}
	<div class="container text-center mt-4 mb-4">
    <h1 class="h5-page mt-4" style="color: #b5a10a;">Menu du marché</h1>
		<div class="menu-wrapper">
			{% for menu in menus %}
				<div class="mt-4" style="min-width: 350px;">
					<div class="card-body text-center">
							<h4 class="menu_block-title fs-3 h5-page text-capitalize" href="{{ path('menu.show', {id: menu.id}) }}">Formule
								{{ menu.title }}</h4>
						<p class="card-text mt-4 fs-5 menu_conditions" style="color: rgb(35, 28, 28); ;">(
							{{ menu.conditions }}
							)</p>
						<p class="card-text mb-4 mt-3 fs-4 me-2 text-light">{{ menu.description }}
							{{ menu.price }}€</p>
							</div>
							</div>
							<hr class="hr_menu">
								{% endfor %}
						<hr>						
						</div>
							</div>

				<div class=" bg-primary mt-4" style="padding-left: 15px;">
	<h3 class="mt-2 text-light fs-2 text-center">Nos horaires</h3>
<div class="table d-flex justify-content-center">
				{% for schedule in schedules %}
				<div class="d-flex flex-column p-4">
						 <div class="fs-4 text-center text-capitalize text-light">{{ schedule.day }}</div>
						<div class="text-center text-light" stylee="width: 300px;">
						{% if schedule.openingTimeMidday %}
						{{ schedule.openingTimeMidday }}
							{% endif %}
							{% if schedule.closingTimeMidday %}
								- {{ schedule.closingTimeMidday }}
							{% endif %}
							<br>
							{% if schedule.openingTimeEvening %}
							{{ schedule.openingTimeEvening }}
			
							{% endif %}
							{% if schedule.openingTimeEvening %}
							- {{ schedule.closingTimeEvening }}
								{% endif %}
							</div> 
							</div>
	 {% endfor %} 
	</div>
	</div>

{% endblock %}