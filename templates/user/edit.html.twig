{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<div class="container">
<div class="mt-4" style="display: flex; justify-content: space-between; width: 100%" >
    <h1>Modifier le profil</h1>
    <div>{{ include('user/_delete_form.html.twig') }}</div>
    </div>
{% for message in app.flashes('warning') %}
			<div class="alert alert-warning mt-4">
				{{ message }}
			</div>
		{% endfor %}

   {{ form_start(form) }}
   	<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.fullName) }}
			{{ form_widget(form.fullName) }}
			<div class="form-error">
				{{ form_errors(form.fullName) }}
			</div>
		</div>

        <div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.email) }}
			{{ form_widget(form.email) }}
			<div class="form-error">
				{{ form_errors(form.email) }}
			</div>
		</div>

         <div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.nbPeople) }}
			{{ form_widget(form.nbPeople) }}
			<div class="form-error">
				{{ form_errors(form.nbPeople) }}
			</div>
		</div>

        	<div class="form-group text-light">
			{{ form_label(form.allergies) }}
			<br>
			<div class="choiceList-wrapper" style="border: none;">
				{% for field in form.allergies %}
					<div style="min-width: 15%;" class="fs-4">
						{{ form_widget(field) }}
						{{ form_label(field) }}
					</div>
				{% endfor %}
			</div>
		</div>

          	<div class="form-group mb-4" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
			{{ form_label(form.plainPassword) }}
			{{ form_widget(form.plainPassword) }}
			<div class="form-error">
				{{ form_errors(form.plainPassword) }}
			</div>
		</div>
	<div class="form-group" style="font-size: 1.6rem;">
				{{ form_row(form.submit) }}
			</div>
<br><br>
 
			{{ form_end(form) }}
 
    </div>
{% endblock %}