{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>FullName</th>
                <td>{{ user.fullName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>NbPeople</th>
                <td>{{ user.nbPeople }}</td>
            </tr>
            <tr>
                <th>Allergy</th>
                <td>{% for allergies in user.allergies %}
				<span class="bg-primary mb-4 fs-6">{{ allergies.name|raw }}</span>	
		{% endfor %}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_n_index') }}">back to list</a>

    <a href="{{ path('app_n_edit', {'id': user.id}) }}">edit</a>

    {{ include('n/_delete_form.html.twig') }}
{% endblock %}
