{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="container mt-4">
	<div class="d-flex justify-content-center flex-wrap">
		 {% for category in categories %}
			<div class="cat-card mb-3 me-3 text-sm-center" style="width: 500px;">
				<button type="button" class="bnt-primary p-2 cat-btn"> 
				<a href="{{ path('app_category_show', {id: category.id}) }}" 
				class="text-light capitalize" 
				style="text-decoration: none; font-weight: bold;">{{ category.name }}
				</a>
				</button>
					<div class="gallery__image imageFile">
						<a href="{{ path('app_category_show', {id: category.id}) }}"><img src="{{ vich_uploader_asset(category, 'imageFile') }}" class="imageFile cat_imageFile img-fluid w-100 shadow-1-strong rounded mb-4"
						style="max-width: 600px; height: 300px; cursor: pointer;"></a>
					
				</div>
			</div>
		{% endfor %}
	</div>
</div>
</div>

<div class=" bg-primary mt-4" style="padding-left: 15px;">
	<h3 class="mt-2 text-light fs-2 text-center">Nos horaires</h3>
<div class="table d-flex justify-content-center">
				{% for schedule in schedules %}
				<div class="d-flex flex-column p-4">
						 <div class="fs-4 text-center text-capitalize text-light">{{ schedule.day }}</div>
						<div class="text-center text-light" stylee="width: 300px;">
						{% if schedule.openingTimeMidday %}
						{{ schedule.openingTimeMidday }}
							{% endif %}
							{% if schedule.closingTimeMidday %}
								- {{ schedule.closingTimeMidday }}
							{% endif %}
							<br>
							{% if schedule.openingTimeEvening %}
							{{ schedule.openingTimeEvening }}
			
							{% endif %}
							{% if schedule.openingTimeEvening %}
							- {{ schedule.closingTimeEvening }}
								{% endif %}
							</div> 
							</div>
	 {% endfor %} 
	</div>
	</div>

{% endblock %}