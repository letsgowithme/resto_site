{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container text-center">
    <h1 class="text-capitalze mt-4">{{ category.name }}</h1>

		{% for dish in category.dishes %}
				<h3 class="text-capitalize text-light fs-4 mt-4">{{ dish.title }}</h3>
					<h4 class=" text-light fs-5">{{ dish.description }}</h4>
					<h5 class=" text-light">{{ dish.price }}€</h5>
                    <hr style="color: white;">
                    
		{% endfor %}

    <a href="{{ path('app_category_index') }}">Toutes les catégories</a>
    </div>
{% endblock %}
