{% extends 'base.html.twig' %}

{% block title %}Table{% endblock %}

{% block body %}
    <h1>Table</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ table.id }}</td>
            </tr>
            <tr>
                <th>NbPeople</th>
                <td>{{ table.nbPeople }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ table.date ? table.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ table.time ? table.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Allergy</th>
                <td>{{ table.allergy }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('table.index') }}">back to list</a>

    <a href="{{ path('table.edit', {'id': table.id}) }}">edit</a>

    {{ include('table/_delete_form.html.twig') }}
{% endblock %}
