{% extends 'base.html.twig' %}

{% block title %}Table index{% endblock %}

{% block body %}
 <div class="container">
    <h1>Réservations de tables</h1>
   

    <table class="table">
        <thead>
            <tr>
               <th>Numéro de la table</th>
                <th>Nombre de couverts</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Allergy</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for table in tables %}
            <tr>
                <td>{{ table.id }}</td>
                <td>{{ table.nbPeople }}</td>
                <td>{{ table.date ? table.date|date('Y-m-d') : '' }}</td>
                <td>{{ table.time ? table.time|date('H:i:s') : '' }}</td>
                <td>{{ table.allergy }}</td>
                <td>
                    <a href="{{ path('table.show', {'id': table.id}) }}">Voir</a>
                    <a href="{{ path('table.edit', {'id': table.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">pas de réservations</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
