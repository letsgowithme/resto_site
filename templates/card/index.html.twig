<div class="container">
	<div class="d-flex justify-content-center flex-wrap">
		{% for card in cards %}
			<div class="mb-3 me-3" style="width: 20rem;">
				<div class="card-body text-center d-flex flex-column align-items-center">
					<h4 class="imgName card-title text-capitalize text-center text-light" 
					style="min-width: 350px; min-height: 100px; position: absolute; margin-top: 10%;" 
					>{{ card.name }}
						{# <a href="{{ path('card.show', {id: card.id}) }}">{{ card.name }}</a> #}
					</h4>
					<div class="gallery__image card-image">
						<img src="{{ vich_uploader_asset(card, 'imageFile') }}" class="card-img img-fluid w-100 shadow-1-strong rounded mb-4">
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</div>
