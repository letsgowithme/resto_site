{% extends 'base.html.twig' %}

{% block title %}Resto index{% endblock %}

{% block body %}
<div class="container">
    <h1>Resto</h1> 
    

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Nombre total de places</th>
                 <th>Nombre de places disponibles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.id }}</td>
                <td>{{ restaurant.title }}</td>
                <td>{{ restaurant.nbTotalPlaces }}</td>
                <td>{{ restaurant.nbAvailablePlaces }}</td>
                <td>
                    <a href="{{ path('restaurant.show', {'id': restaurant.id}) }}">show</a>
                    {# <a href="{{ path('restaurant_edit', {'id': restaurant.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
    </div>
{% endblock %}
