{% extends 'base.html.twig' %}

{% block title %}Table index{% endblock %}

{% block body %}
 <div class="container">
    <h1>Réservations de tables</h1>
   

    <table class="table">
        <thead>
            <tr>
               <th>Numéro de la table</th>
                <th>Nombre de couverts</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Allergy</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.nbPeople }}</td>
                <td>{{ reservation.date ? reservation.date|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.time ? reservation.time|date('H:i:s') : '' }}</td>
                <td>{{ reservation.allergy }}</td>
                <td>
                    <a href="{{ path('reservation.show', {'id': reservation.id}) }}">Voir</a>
                    <a href="{{ path('reservation.edit', {'id': reservation.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">pas de réservations</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
