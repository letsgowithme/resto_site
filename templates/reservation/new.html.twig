{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
 <div class="container mt-4 text-center">

    <h1 class="h5-page">Page de la reservation</h1>
    <p>Merce d'avance...
		</p>

       {# {{ include('reservation/_form.html.twig') }} #}
		
			 {{ form_start(form) }}
			
		<div class="row mb-4 form-row">
		{% if app.user %}
			
			<div class="form-group  col-3 mb-4">
				{{ form_label(app.user.nbPeople) }}
				{{ form_widget(app.user.nbPeople) }}
				<div class="form-error">
					{{ form_errors(app.user.nbPeople) }}
				</div>
            </div>
						{% else %}
						
						<div class="row mb-4 form-row">
			<div class="form-group  col-3 mb-4">
				{{ form_label(form.nbPeople) }}
				{{ form_widget(form.nbPeople) }}
				<div class="form-error">
					{{ form_errors(form.nbPeople) }}
				</div>
            </div>
						
           {% endif %}
				
				<div class="form-group col-9 mb-4">
					{{ form_label(form.date) }}
					{{ form_widget(form.date) }}
					<div class="form-error">
						{{ form_errors(form.date) }}
					</div>
				</div>
                <hr>
        </div> 
		 <div class="row">
		 {# {% if daySlots.isAvailable is same as true %} #}		
           	 <div class="form-group">
			{{ form_label(form.daySlots) }}
			<br>
			<div class="choiceList-wrapper">
				{% for field in form.daySlots %}
					<div style="min-width: 15%; background-color: red; padding: 10px; margin-right: 20px; color: white;">
						{{ form_widget(field) }}
						{{ form_label(field) }}
					</div>
				{% endfor %}
				 {# {% endif %} #}
			</div>
		</div>
		{{ form_label(form.eveningSlots) }}
	  	<br>
			<div class="choiceList-wrapper">
				{% for field in form.eveningSlots %}
					<div style="min-width: 15%; background-color: red; padding: 10px; margin-right: 20px; color: white;">
						{{ form_widget(field) }}
						{{ form_label(field) }}
					</div>
				{% endfor %}
				 {# {% endif %} #}
			</div>
		</div>

					 <div class="form-group">
			{{ form_label(form.allergies) }}
			<br>
			<div class="choiceList-wrapper">
				{% for field in form.allergies %}
					<div style="min-width: 15%;">
						{{ form_widget(field) }}
						{{ form_label(field) }}
					</div>
				{% endfor %}
			</div>
		</div>
        <div class="form-group mb-4">
				{{ form_row(form.submit) }}
			</div>
					{{ form_end(form) }}
				</div>

    </div>
{% endblock %}



			