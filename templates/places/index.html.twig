{% block title %}Menu index
{% endblock %}

{% block body %}
	<div class="container text-center mt-4 mb-4">
	 {% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %} 
    <h1 class="h5-page mt-4 mb-4" style="color: #b5a10a;">Menu du march√©</h1>
