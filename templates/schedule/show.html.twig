{% extends 'base.html.twig' %}

{% block title %}Schedule
{% endblock %}

{% block body %}
	<h3>NOS<br>Horaires d'ouverture</h3>
	<table class="table mt-4">
		<thead>
			<tr>
				<th>Jour</th>
				<th>Horaire d'ouverture</th>
			</tr>
		</thead>
		<tbody>
			
				<tr>
					<td>{{ schedule.day }}</td>
					<td>{{ schedule.openingTimeMidday }}
						-
						{{ schedule.closingTimeMidday }}<br>
						{{ schedule.openingTimeEvening }}
						-
						{{ schedule.closingTimeEvening }}
					</td>
			
			</tbody>
		</tbody>
	</tr>
</div>{% endblock %}
