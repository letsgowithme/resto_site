{% extends 'base.html.twig' %}

{% block title %}Schedule index{% endblock %}

{% block body %}
    
<div class="container lg-w-50">
<h1>NOS<br>Horaires d'ouverture</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Day</th>
                <th>Heures d'ouverture</th>
            
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for schedule in schedules %}
            <tr>
                <td>{{ schedule.day }}</td>
                <td>{{ schedule.openingTime }} - {{ schedule.closingTime }}<br>
               {{ schedule.openingTime }} - {{ schedule.closingTime }}</td>
                <td>
                    <a href="{{ path('app_schedule_show', {'id': schedule.id}) }}">show</a>
                    <a href="{{ path('app_schedule_edit', {'id': schedule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_schedule_new') }}">Create new</a>
    </div>
{% endblock %}
