{% extends 'base.html.twig' %}

{% block title %}New Schedule{% endblock %}

{% block body %}
 <div class="container">
    <h1>Cr√©er le jour</h1>
	{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.day) }}
			{{ form_widget(form.day) }}
