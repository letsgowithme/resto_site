				{{ form_errors(form.openingTimeMidday) }}
			</div>
		</div>
        <div class="form-group">
			{{ form_label(form.closingTimeMidday) }}
			{{ form_widget(form.closingTimeMidday) }}
			<div class="form-error">
				{{ form_errors(form.closingTimeMidday) }}
			</div>
		</div>
        <div class="form-group">
			{{ form_label(form.openingTimeEvening) }}
			{{ form_widget(form.openingTimeEvening) }}
			<div class="form-error">
				{{ form_errors(form.openingTimeEvening) }}
			</div>
		</div>
        <div class="form-group">
			{{ form_label(form.closingTimeEvening) }}
			{{ form_widget(form.closingTimeEvening) }}
			<div class="form-error">
				{{ form_errors(form.closingTimeEvening) }}
			</div>
		</div>

		{{ form_end(form) }}
    <a href="{{ path('schedule.index') }}">Vers les horaires d'ouverture</a>
    </div>
{% endblock %}
